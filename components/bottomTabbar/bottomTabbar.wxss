.bottom-tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 50px;
  border-top: 1px solid #ccc;
  background-color: #fff;
  z-index: 1000;
}

.tabbar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 80px;
  height: 100%;
}

.tabbar-item image {
  width: 24px;
  height: 24px;
  margin-bottom: 2px;
}

.tabbar-item text {
  font-size: 12px;
}