.family-container {
  padding: 20rpx;
  background: #f5f5f5;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 30rpx;
  color: #333;
}

.family-list {
  background: white;
  border-radius: 10rpx;
}

.family-member {
  display: flex;
  align-items: center;
  padding: 25rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}

.member-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.member-info {
  flex: 1;
}

.member-name {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.member-relation {
  font-size: 26rpx;
  color: #666;
}

.no-data-tip {
  text-align: center;
  padding: 50rpx 0;
  color: #999;
  font-size: 28rpx;
}