/* 整体容器样式 */
.post-detail-container {
  padding: 1.25rem; 
  background-color: #f9fafb; 
  border-radius: 0.5rem; 
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06); 
  max-width: 800px; 
  margin: 1.25rem auto; 
}

/* 帖子头部样式 */
.post-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.75rem; 
  background-color: #ffffff; 
  padding: 1.25rem; 
  border-radius: 0.375rem; 
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06); 
  transition: box-shadow 0.3s ease; 
}

.post-header:hover {
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06); 
}

/* 作者信息样式 */
.author-info {
  display: flex;
  align-items: center;
}

/* 作者头像样式 */
.avatar {
  width: 2.5rem; 
  height: 2.5rem; 
  border-radius: 50%; 
  margin-right: 0.75rem; 
  object-fit: cover; 
}

/* 作者姓名样式 */
.author-name {
  font-size: 1.125rem; 
  font-weight: 600; 
  color: #374151; 
}

/* 帖子发布时间样式 */
.post-time {
  font-size: 0.875rem; 
  color: #6b7280; 
}

/* 帖子内容样式 */
.post-content {
  background-color: #ffffff; 
  padding: 1.25rem; 
  border-radius: 0.375rem; 
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06); 
  margin-bottom: 0.75rem; 
  transition: box-shadow 0.3s ease; 
  line-height: 1.625; 
  color: #4b5563; 
}

.post-content:hover {
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06); 
}

/* 评论列表样式 */
.comment-list {
  background-color: #ffffff; 
  padding: 1.25rem; 
  border-radius: 0.375rem; 
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06); 
  transition: box-shadow 0.3s ease; 
}

.comment-list:hover {
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06); 
}

/* 单个评论样式 */
.comment-item {
  margin-bottom: 0.75rem; 
  padding-bottom: 0.75rem; 
  border-bottom: 1px solid #e5e7eb; 
  display: flex;
  position: relative; 
  flex-direction: column; 
}

/* 评论作者信息样式 */
.comment-author-info {
  display: flex;
  align-items: center;
  margin-bottom: 0.375rem; 
}

/* 评论作者头像样式 */
.comment-avatar {
  width: 1.875rem; 
  height: 1.875rem; 
  border-radius: 50%; 
  margin-right: 0.75rem; 
  object-fit: cover; 
}

/* 评论作者姓名样式 */
.comment-author-name {
  font-size: 1rem; 
  font-weight: 600; 
  color: #374151; 
}

/* 评论内容样式 */
.comment-content {
  font-size: 0.9375rem; 
  margin-bottom: 0.375rem; 
  line-height: 1.5; 
  color: #4b5563; 
}

/* 评论时间样式 */
.comment-time {
  font-size: 0.75rem; 
  color: #9ca3af; 
  align-self: flex-end; 
}    