.detail-page {
  padding: 20rpx;
}

.detail-swiper {
  width: 100%;
  height: 500rpx;
  margin-bottom: 20rpx;
}

.detail-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 10rpx;
}

.publisher-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.family-name {
  font-size: 26rpx;
  color: #666;
}

.category-tag {
  background-color: #ffd600;
  color: #333;
  font-size: 28rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-bottom: 15rpx;
  display: inline-block;
}

.detail-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.detail-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 20rpx;
}

.detail-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.info-item {
  display: flex;
  align-items: center;
}

.info-label {
  font-size: 28rpx;
  color: #999;
  width: 120rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
}

/* pages/goodsDetail/goodsDetail.wxss */
.help-btn {
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  background-color: #007aff;
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  color: white;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.help-btn image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 8rpx;
}