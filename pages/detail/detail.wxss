.detail-page {
  padding: 20rpx;
}

.detail-swiper {
  width: 100%;
  height: 500rpx;
  margin-bottom: 20rpx;
}

.detail-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 10rpx;
}

.category-tag {
  background-color: #ffd600;
  color: #333;
  font-size: 28rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-bottom: 15rpx;
  display: inline-block;
}

.detail-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.detail-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 20rpx;
}

.publisher-info-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  margin-top: 60rpx;
}

.publisher-info-left {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.publisher-name {
  font-size: 28rpx;
  color: #333;
}

.publisher-info-right {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.family-name {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.publish-time {
  font-size: 26rpx;
  color: #666;
}

.help-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  background-color: #007aff;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  color: white;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}