.my-container {
  background: #f5f5f5;
  padding: 20rpx;
}

/* 顶部用户信息 */
.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.user-name {
  font-size: 32rpx;
  font-weight: 600;
}

/* 数据统计模块 */
.data-statistics {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
  background: white;
  padding: 25rpx 0;
  border-radius: 10rpx;
}
.stat-item {
  text-align: center;
}
.stat-label {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.stat-value {
  font-size: 34rpx;
  font-weight: 600;
}

/* 功能模块 */
.function-list {
  margin-bottom: 20rpx;
}
.function-item {
  display: flex;
  align-items: center;
  background: white;
  padding: 30rpx 20rpx;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
}
.item-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}
.item-text {
  font-size: 30rpx;
}

/* 其他功能 */
.other-functions {
  background: white;
  border-radius: 10rpx;
}
.other-item {
  display: block;
  padding: 25rpx 20rpx;
  font-size: 30rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
}
.other-item:last-child {
  border-bottom: none;
}

/* 单独给退出按钮添加颜色或样式 */
.other-item:last-child {
  color: #ff4d4f; /* 红色突出显示 */
}