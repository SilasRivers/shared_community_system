.community-container {
  padding: 10px;
  background-color: #f5f5f5;
}
.post-list {
  margin-bottom: 60px;
}
.post-item {
  background-color: white;
  border-radius: 5px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
  padding: 15px;
  margin-bottom: 15px;
}
.post-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}
.author-info {
  display: flex;
  align-items: center;
}
.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}
.author-name {
  font-size: 16px;
  font-weight: bold;
}
.post-time {
  font-size: 14px;
  color: #999;
}
.post-content {
  margin-bottom: 10px;
}
.post-image image {
  width: 100%;
  height: auto;
  border-radius: 5px;
}
.post-interaction {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.like,
.comment {
  display: flex;
  align-items: center;
}
.icon {
  width: 25px;
  height: 25px;
  margin-right: 5px;
}
.add-post-btn {
  position: fixed;
  bottom: 15px;
  right: 15px;
  background-color: #007aff;
  color: white;
  text-align: center;
  padding: 10px 20px;
  border-radius: 50%;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
}
.comment-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}
.backdrop {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.comment-popup-content {
  background-color: white;
  border-radius: 10px;
  padding: 20px;
  width: 80%;
  max-width: 400px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  animation: fadeIn 0.3s ease;
}
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}
.popup-title {
  font-size: 18px;
  font-weight: bold;
}
.close-btn {
  font-size: 24px;
  cursor: pointer;
  color: #999;
  transition: color 0.3s ease;
}
.close-btn:hover {
  color: #333;
}
.comment-input {
  width: 100%;
  min-height: 100px;
  border: 1px solid #ccc;
  border-radius: 5px;
  padding: 10px;
  margin-bottom: 10px;
  font-size: 14px;
  resize: none;
}
.remaining-chars {
  font-size: 14px;
  color: #999;
  margin-bottom: 15px;
  text-align: right;
}
.comment-submit-btn {
  background-color: #007aff;
  color: white;
  text-align: center;
  padding: 10px;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}
.comment-submit-btn:hover {
  background-color: #0056b3;
}
.remaining-chars {
  font-size: 12px;
  color: #999;
  text-align: right;
  margin-bottom: 15px;
}
.loading {
  text-align: center;
  color: #999;
  padding: 10px 0;
}
.no-more {
  text-align: center;
  color: #999;
  padding: 10px 0;
}