.add-post-container {
  padding: 15px;
  background-color: #f5f5f5;
}
.post-form {
  background-color: white;
  border-radius: 5px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
  padding: 15px;
}
.post-content-input {
  width: 100%;
  height: 150px;
  border: 1px solid #ccc;
  border-radius: 5px;
  padding: 5px 10px;
  margin-bottom: 15px;
}
.image-upload {
  text-align: center;
  margin-bottom: 15px;
}
.image-preview {
  text-align: center;
  margin-bottom: 15px;
}
.image-preview image {
  width: 150px;
  height: 150px;
  border-radius: 5px;
}
.submit-btn {
  background-color: #007aff;
  color: white;
  text-align: center;
  padding: 10px;
  border-radius: 5px;
}