.page-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

.community-notice {
  background-color: #f5f5f5;
  padding: 10px;
  display: flex;
  align-items: center;
  overflow: hidden; /* 隐藏超出部分 */
}
.community-notice text{
  font-size: 14px; 
  white-space: nowrap; /* 强制不换行 */
  text-overflow: ellipsis; /* 超出部分显示省略号 */
  overflow: hidden; /* 配合 text-overflow 隐藏超出部分 */
}
.swiper-container {
  width: 100%;
  height: 200px;
}

.swiper-container image {
  width: 100%;
  height: 100%;
}

.hot-item-title {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  padding: 5px;
  text-align: center;
  font-size: 14px;
}

.function-area {
  flex: 1;
  padding: 20px;
  background-color: #f0f0f0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.notice-icon {
  width: 1em; /* 宽度根据字体大小自适应 */
  height: 1em; /* 高度根据字体大小自适应 */
  margin-right: 5px; /* 图标与文字间的间距 */
  vertical-align: middle; /* 辅助图标和文字垂直对齐 */
}

/* 功能服务*/
.navi-services {
  height: 253rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 10rpx;
  border-radius: 12rpx;
  box-shadow: 0rpx 2rpx 20rpx 0rpx rgba(204, 204, 204, 0.2);
}

.navi-services-title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-left: 24rpx;
  margin-right: 24rpx;
  margin-top: 24rpx;
}
.navi-services-title-left {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}
.navi-services-title-right {
  font-size: 24rpx;
  color: #999;
}
.navi-services-list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-left: 24rpx;
  margin-right: 24rpx;
  margin-top: 32rpx;
}
.navi-services-list-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.navi-services-list-item image {
  width: 60rpx;
  height: 60rpx;
}
.navi-services-list-item text {
  font-size: 26rpx;
}
/* 功能服务结束*/

.goods-item {
  display: flex;
  align-items: center;
  padding: 10px;
  flex-direction: column; /* 垂直排列图片和标题 */
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  border-bottom: 1px solid #eee;
}

.goods-image {
  width: 100%;
  height: 200rpx;
}
.goods-item image {
  width: 100%;
  height: 100%;
  display: block;
}
.goods-title {
  padding: 15rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.goods-info {
  flex: 1;
}

.goods-name {
  font-size: 16px;
  font-weight: bold;
}

.goods-price {
  font-size: 14px;
  color: #f60;
}

.loading,
.no-more {
  text-align: center;
  padding: 10px;
  color: #999;
}

/* 商品列表区样式 */
.goods-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}
.goods-card {
  position: relative;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}
.goods-card image {
  width: 100%;
  height: 200rpx;
  display: block;
}
.goods-info {
  padding: 15rpx;
}
.goods-name {
  font-size: 28rpx;
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.goods-num {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background-color: #ff4d4f;
  color: white;
  padding: 4rpx 8rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
}
.no-more-tip {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  padding: 30rpx 0;
  width: 100%;
  /* grid-column: 1 / 3; */
  margin-top: auto; /* 推到底部 */
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 商品列表容器样式 */
.goods-list-container {
  display: flex;
  flex-direction: column;
}
